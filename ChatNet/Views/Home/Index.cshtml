@using Data.ModelsView
@{
    ViewData["Title"] = "Home Page";
    Layout = "";
}

@model UsuarioModelView

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container vh-100 vw-100 content">
    <div class="row h-100 flex justify-content-center align-items-center">
        <div class="card py-2">
            <div class="card-body text-center ">
                <h5 class="card-title ">Selecione un Nick Name</h5>
                @using (Html.BeginForm("index", "home", FormMethod.Post))
                {
                    <div class="mb-3 card-text">
                        <input type="text" class="form-control form-control-sm" asp-for="nickName">
                        <span asp-validation-for="nickName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center align-items-center ">
                        <button type="submit" class="btn btn-outline-primary">Entrar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #A9C9FF;
        background-image: linear-gradient(180deg, #A9C9FF 0%, #FFBBEC 100%);
    }
</style>