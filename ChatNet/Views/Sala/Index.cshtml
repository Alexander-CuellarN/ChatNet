@using Data.ModelsView
@model List<SalaModelView>

@{
    ViewData["Title"] = "Salas";
}

@if (ViewBag.Message != "")
{
    <div class="d-flex justify-content-center align-items-center bg-info h4">
        <p> @ViewBag.Message</p>
    </div>
}
<div class="d-flex justify-content-end align-items-center mb-3 ">
    <a class="btn btn-outline-primary" asp-action="Create" asp-controller="Sala">
        Crear
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover rounded">
        <thead class="text-center table-dark ">
            <tr>
                <th>Titulo </th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sala in Model)
            {
                <tr class="@($"trTarget_{sala.SalaID}")">
                    <td>@Html.DisplayFor(s => sala.Title)</td>
                    <td>@Html.DisplayFor(s => sala.Descripcion)</td>
                    <td class="d-flex justify-content-end gap-1">
                        <a asp-action="Edit" asp-controller="Sala" asp-route-id="@sala.SalaID"
                           class="btn btn-outline-info">
                            Editar
                        </a>
                        <button data-salaId="@sala.SalaID" type="button" class="btnDelete btn btn-outline-danger">
                            Borrar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/Sala.js" type="module"></script>